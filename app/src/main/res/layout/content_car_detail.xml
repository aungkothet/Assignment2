<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp" app:srcCompat="@drawable/car"
                android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/app_name"/>
        <TextView
                android:text="@string/luxury_car"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="center" android:textSize="18sp" android:textColor="@android:color/darker_gray"/>
        <TextView
                android:text="@string/audi_a5_sportback_or_similar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:textAlignment="center" android:textColor="@android:color/black" android:textSize="16sp"/>
        <TextView
                android:text="@string/apr_3_12pm_apr6_12pm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:textAlignment="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:background="@drawable/rounded_blue_bg"
                android:weightSum="3" android:padding="10dp" android:id="@+id/linearLayout"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintCircleRadius="5dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                    android:textColor="@android:color/white" android:textSize="24sp"
                    android:fontFamily="sans-serif-condensed-medium"

                    android:layout_gravity="center" android:text="@string/str_price"/>
            <TextView
                    android:text="@string/cad_per_day_nincl_tax_fees"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
            <android.support.design.button.MaterialButton
                    app:rippleColor="@color/colorAccent"
                    app:cornerRadius="5dp"
                    android:text="@string/str_book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"
                    app:backgroundTint="@android:color/white"
                    android:textColor="@color/colorAccent"
            />
        </LinearLayout>
        <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout"
                android:layout_marginTop="32dp" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardBgColor"
            >

                <TextView
                        android:id="@+id/tv_offer_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offer_detail"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        android:id="@+id/tv_automatic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_automatic"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_offer_detail"
                        app:layout_constraintStart_toStartOf="@+id/tv_offer_detail"/>

                <TextView
                        android:id="@+id/tv_air_con"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_automatic"
                        app:layout_constraintStart_toStartOf="@+id/tv_automatic" android:text="@string/str_air_con"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_profile" android:id="@+id/img_profile"
                        app:layout_constraintTop_toTopOf="@+id/tv_air_con"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_air_con"
                        app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/textView14"
                        android:layout_marginEnd="3dp" android:contentDescription="@string/app_name"/>

                <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_4"
                        android:textColor="@android:color/black"
                        app:layout_constraintTop_toTopOf="@+id/img_profile"
                        app:layout_constraintBottom_toBottomOf="@+id/img_profile"
                        app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginEnd="16dp"/>

                <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_work"
                        app:layout_constraintTop_toTopOf="@+id/textView14"
                        app:layout_constraintBottom_toBottomOf="@+id/textView14"
                        app:layout_constraintVertical_bias="0.4" app:layout_constraintEnd_toStartOf="@+id/textView15"
                        android:layout_marginEnd="3dp" android:contentDescription="@string/app_name"/>

                <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_1"
                        android:textColor="@android:color/black"
                        app:layout_constraintTop_toTopOf="@+id/imageView2"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                        app:layout_constraintEnd_toStartOf="@+id/imageView6" android:layout_marginEnd="16dp"/>

                <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_car_door"
                        app:layout_constraintTop_toTopOf="@+id/textView15"
                        app:layout_constraintBottom_toBottomOf="@+id/textView15"
                        app:layout_constraintEnd_toStartOf="@+id/textView16" android:layout_marginEnd="3dp"
                        android:contentDescription="@string/app_name"/>

                <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_4"
                        android:textColor="@android:color/black"
                        app:layout_constraintTop_toTopOf="@+id/imageView6"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                        app:layout_constraintEnd_toEndOf="@+id/imageView3"/>

                <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pick_up"
                        app:layout_constraintStart_toStartOf="@+id/tv_start_time"
                        app:layout_constraintEnd_toEndOf="@+id/tv_start_time" android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_start_time"/>

                <View
                        android:id="@+id/viewLine"
                        android:layout_width="100dp"
                        android:layout_height="2dp"
                        android:background="@color/colorLine"
                        app:layout_constraintTop_toTopOf="@+id/tv_end_time"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_end_time"
                        app:layout_constraintStart_toEndOf="@+id/tv_start_time"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/tv_end_time"/>

                <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drop_off"
                        app:layout_constraintEnd_toEndOf="@+id/tv_end_time"
                        app:layout_constraintStart_toStartOf="@+id/tv_end_time" android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_end_time"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>

                <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_date_time"
                        app:layout_constraintTop_toTopOf="@+id/viewLine"
                        app:layout_constraintBottom_toBottomOf="@+id/viewLine"
                        android:textColor="@android:color/black" app:layout_constraintVertical_bias="0.529"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/viewLine"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

                <TextView
                        android:id="@+id/tv_direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        app:layout_constraintEnd_toStartOf="@+id/textView18"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView17"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_end_time"
                        app:layout_constraintBottom_toBottomOf="@+id/textView18"
                        android:text="@string/str_in_terminal"/>

                <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_date_time"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/img_map"
                        android:textColor="@android:color/black" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/viewLine" app:layout_constraintHorizontal_bias="0.5"
                        android:layout_marginEnd="16dp"/>
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="25dp" app:srcCompat="@drawable/car_logo"
                        android:id="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/tv_offer_detail"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_offer_detail"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                        android:contentDescription="@string/app_name"/>
                <TextView
                        android:text="@string/convertable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_convertable"
                        android:textColor="@android:color/black" android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_air_con"
                        app:layout_constraintStart_toStartOf="@+id/tv_air_con"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="150dp" app:srcCompat="@drawable/map"
                        android:id="@+id/img_map"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_convertable" android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="@+id/textView16"
                        app:layout_constraintStart_toStartOf="@+id/tv_convertable"
                        android:contentDescription="@string/app_name"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</ScrollView>